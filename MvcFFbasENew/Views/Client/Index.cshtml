@model IEnumerable<FFbasEDataEF.CLIENT>

@{
    ViewBag.Title = "Список клиентов";
}

@{
    @Scripts.Render("~/scripts/jquery-1.8.2.js")
    @Scripts.Render("~/scriots/jquery.unobtrusive-ajax.js")
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Добавить клиента", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.C_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_PHONE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_SEC_PHONE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_COMPANY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_POST)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_EXPERIENCE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_INTERESTS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_SG)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.C_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_PHONE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_SEC_PHONE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_COMPANY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_POST)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_EXPERIENCE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_INTERESTS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STATUS.SG_NAME)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.C_ID }) | 
            @Html.ActionLink("Delete", "Delete", new { id = item.C_ID })
        </td>
    </tr>
    }

</table>
